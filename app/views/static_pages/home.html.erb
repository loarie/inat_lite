<div class="row">
  <div class="col-md-3">
    <%= profile_pic_for current_user %>
    <div class="prof">
      <h3><%= current_user.login %></h3>
      <%= link_to edit_user_path(current_user), role: "button", class: "btn btn-default btn-lg" do %>
        <span class='glyphicon glyphicon-cog'></span> Settings
      <% end %>
    </div>
    <button class="btn btn-primary btn-lg add_obs" data-toggle="modal" data-target="#myModal">
      Add Observation
    </button>
    <ul class="items nav nav-pills nav-stacked">
        <li class="active"><a href="#">Item1</a></li>
        <li><a href="#">Item2</a></li>
        <li><a href="#">Item3</a></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="row">
      <%= render @observations %>
    </div> 
  </div>
</div>
